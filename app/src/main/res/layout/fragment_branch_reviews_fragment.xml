<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reviews on Brand"
            android:background="@drawable/border_button"
            android:layout_margin="15dp"
            android:textSize="18dp"
            android:textColor="#663399"
            android:padding="6dp"
            android:gravity="center"/>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/s3oody"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFF"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameo"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Mohamed Shika"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="left"
                />
            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srb_starSize="25dp"
                app:srb_numberOfStars="5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:srb_rating="3"
                app:srb_stepSize="0.5"
                app:srb_borderColor="#ffd034"
                app:srb_fillColor="#ffc411"
                app:srb_isIndicator="false"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/revi"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Awesome branch , i have many assets from
it's offers .. contuniue ."
                android:textColor="#b6b6b6"
                android:textStyle="bold"
                android:gravity="left"
                />
        </LinearLayout>



    </LinearLayout>




