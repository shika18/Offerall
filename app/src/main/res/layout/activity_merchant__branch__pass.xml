<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Merchant_Branch_Pass"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bName"
        android:text="Branch Name"
        android:textSize="27sp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:textColor="#797979"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pas"
        android:text="Enter Branch Password"
        android:fontFamily="sans-serif-medium"
        android:textSize="19sp"
        android:textColor="#590d7c"
        android:layout_marginTop="50dp"
        android:layout_below="@id/bName"
        android:gravity="center_horizontal"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:textColorHint="#bd590d7c"
        android:inputType="textPassword"
        android:id="@+id/password"
        android:layout_below="@id/pas"
        android:layout_marginTop="20dp"
        android:padding="6dp"
        android:layout_margin="15dp"

        />

    <Button
        android:id="@+id/confirmPass"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/blue_radius"
        android:onClick="confirm"
        android:text="Confirm"
        android:textColor="@color/white" />
</RelativeLayout>